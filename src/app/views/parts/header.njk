<header>
    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>LaunchStore</h1>
                <h2>Compra e venda</h2>
            </div>
        </a>
        <form class="search" method="GET" action="/products/search">
            <input type="text"
                name="filter"
                placeholder="Buscar por produtos"
                {% if search.term %}
                    value="{{search.term}}"
                {% endif %}
            >
        </form>
        <nav class="primary">
            <ul>
                <li>
                    <a href="/ads/create">
                        <i class="material-icons">add</i>Novo Anúncio
                    </a>
                </li>
                <li class="accounts">
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>Minha compra
                    </a>
                    {% if user %}
                        <ul class="submenu">
                            <li>
                                <a href="/users">Configurações</a>
                            </li>
                            <li>
                                <a href="/buying">Meus pedidos</a>
                            </li>
                            <li>
                                <a href="/selling">Minhas vendas</a>
                            </li>
                            <li class="white">
                                <form action="/users/logout" method="POST" >
                                    <button class="white">Sair</button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
            </ul>
        </nav>
    </div>
</header>